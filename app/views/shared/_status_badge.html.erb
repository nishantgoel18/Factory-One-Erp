<%# app/views/shared/_status_badge.html.erb %>

<%
  # Determine badge color based on status
  badge_class = case status
                when 'DRAFT'
                  'bg-secondary'
                when 'CONFIRMED', 'SCHEDULED', 'IN_PROGRESS'
                  'bg-info'
                when 'PARTIALLY_RECEIVED'
                  'bg-warning text-dark'
                when 'RECEIVED', 'COMPLETED', 'POSTED', 'FULLY_RECEIVED'
                  'bg-success'
                when 'CLOSED'
                  'bg-dark'
                when 'CANCELLED'
                  'bg-danger'
                when 'OPEN'
                  'bg-primary'
                else
                  'bg-secondary'
                end
%>

<span class="badge <%= badge_class %>">
  <%= status.titleize %>
</span>