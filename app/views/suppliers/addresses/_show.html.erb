<div class="tab-pane fade" id="addresses">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Addresses</h5>
    <a href="<%= new_supplier_address_url(@supplier) %>" class="btn btn-sm btn-primary">
      <i class="bi bi-plus-circle"></i> Add Address
    </a>
  </div>
  
  <div id="addressesList">
    <% if @addresses.any? %>
      <div class="row">
        <% @addresses.each do |address| %>
          <div class="col-md-6 mb-3">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <h6 class="mb-1">
                      <span class="badge bg-secondary"><%= address.address_type.titleize %></span>
                      <% if address.is_default %>
                        <span class="badge bg-success ms-1">Default</span>
                      <% end %>
                    </h6>
                    <% if address.address_label.present? %>
                      <strong><%= address.address_label %></strong>
                    <% end %>
                  </div>
                  <div class="btn-group btn-group-sm">
                    <a class="btn btn-outline-primary" href="<%= edit_supplier_address_url(@supplier, address) %>">
                      <i class="anticon anticon-edit"></i>
                    </a>
                    <a class="btn btn-outline-danger" onclick="deleteAddress(<%= address.id %>)">
                      <i class="anticon anticon-delete"></i>
                    </a>
                  </div>
                </div>
                
                <p class="mb-2">
                  <%= address.street_address_1 %><br>
                  <% if address.street_address_2.present? %>
                    <%= address.street_address_2 %><br>
                  <% end %>
                  <%= address.city %>, <%= address.state_province %> <%= address.postal_code %><br>
                  <%= address.country %>
                </p>
                
                <% if address.contact_phone.present? %>
                  <p class="mb-1 small">
                    <i class="bi bi-telephone"></i> <%= address.contact_phone %>
                  </p>
                <% end %>
                
                <% unless address.is_default %>
                  <button class="btn btn-sm btn-outline-success mt-2" onclick="makeDefaultAddress(<%= address.id %>)">
                    Make Default
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-geo-alt" style="font-size: 3rem;"></i>
        <p class="mt-3">No addresses added yet</p>
      </div>
    <% end %>
  </div>
</div>