<div class="tab-pane fade" id="activities">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Recent Activities</h5>
    <!-- <a href="<%= new_supplier_activity_url(@supplier) %>" class="btn btn-sm btn-primary">
      <i class="bi bi-plus-circle"></i> Log Activity
    </a> -->
  </div>
  
  <div id="activitiesList">
    <% if @recent_activities.any? %>
      <div class="timeline">
        <% @recent_activities.each do |activity| %>
          <div class="timeline-item">
            <div class="timeline-marker bg-<%= activity.activity_status == 'COMPLETED' ? 'success' : 'warning' %>"></div>
            <div class="timeline-content">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h6 class="mb-0"><%= activity.subject %></h6>
                  <small class="text-muted">
                    <%= activity.activity_date.strftime('%b %d, %Y %I:%M %p') %>
                    <% if activity.related_user %>
                      by <%= activity.related_user.full_name %>
                    <% end %>
                  </small>
                </div>
                <div>
                  <span class="badge bg-secondary"><%= activity.activity_type.titleize %></span>
                  <% if activity.priority == 'URGENT' %>
                    <span class="badge bg-danger">Urgent</span>
                  <% end %>
                </div>
              </div>
              
              <% if activity.description.present? %>
                <p class="mb-2 small"><%= activity.description %></p>
              <% end %>
              
              <% if activity.outcome.present? %>
                <div class="alert alert-sm alert-success mb-0">
                  <strong>Outcome:</strong> <%= activity.outcome %>
                </div>
              <% end %>
              
              <% if activity.followup_required && activity.followup_date %>
                <small class="text-warning">
                  <i class="bi bi-calendar-event"></i> Follow-up: <%= activity.followup_date.strftime('%m/%d/%Y') %>
                </small>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-clock-history" style="font-size: 3rem;"></i>
        <p class="mt-3">No activities logged yet</p>
      </div>
    <% end %>
  </div>
</div>

<!-- ============================================================================ -->
<!-- STYLES FOR ALL TABS -->
