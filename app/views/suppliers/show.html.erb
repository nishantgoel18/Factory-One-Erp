<%# app/views/customers/show.html.erb %>

<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Supplier Details</h2>

    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <%= link_to raw('<i class="anticon anticon-home m-r-5"></i>Home'), root_path, class: "breadcrumb-item" %>
        <%= link_to "Masters", "#", class: "breadcrumb-item" %>
        <%= link_to "Suppliers", suppliers_path, class: "breadcrumb-item" %>
        <span class="breadcrumb-item active">Supplier Details</span>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">

          <div class="table-responsive">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th width="20%">Code</th>
                  <td><%= @supplier.code %></td>
                </tr>
                <tr>
                  <th>Name</th>
                  <td><%= @supplier.name %></td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td><%= @supplier.email.presence || "-" %></td>
                </tr>
                <tr>
                  <th>Phone</th>
                  <td><%= @supplier.phone.presence || "-" %></td>
                </tr>
                <tr>
                  <th>Billing Address</th>
                  <td><%= @supplier.billing_address %></td>
                </tr>
                <tr>
                  <th>Shipping Address</th>
                  <td><%= @supplier.shipping_address.presence || "-" %></td>
                </tr>
                <tr>
                  <th>Lead Time</th>
                  <td><%= @supplier.lead_time_days %> days</td>
                </tr>
                <tr>
                  <th>On-Time Delivery</th>
                  <td><%= @supplier.on_time_delivery_rate %>%</td>
                </tr>
                <tr>
                  <th>Active</th>
                  <td><%= @supplier.is_active ? "Yes" : "No" %></td>
                </tr>

                <tr>
                  <th>Actions</th>
                  <td>
                    <%= link_to "Edit", edit_supplier_path(@supplier) %> |
                    <%= link_to "Delete",
                          delete_supplier_path(@supplier),
                          method: :delete,
                          data: { confirm: "Are you sure?" }, class: "confirm-delete"  %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>