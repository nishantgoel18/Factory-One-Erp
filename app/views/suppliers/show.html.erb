<%# app/views/customers/show.html.erb %>

<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Supplier Details</h2>

    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <%= link_to raw('<i class="anticon anticon-home m-r-5"></i>Home'), root_path, class: "breadcrumb-item" %>
        <%= link_to "Masters", "#", class: "breadcrumb-item" %>
        <%= link_to "Suppliers", suppliers_path, class: "breadcrumb-item" %>
        <span class="breadcrumb-item active">Supplier Details</span>
      </nav>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col">
      <!-- Breadcrumb -->
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h2 class="mb-1">
            <%= @supplier.display_name %>
            <% if @supplier.is_preferred_supplier %>
              <span class="badge bg-warning ms-2"><i class="bi bi-star-fill"></i> Preferred</span>
            <% end %>
            <% if @supplier.is_strategic_supplier %>
              <span class="badge bg-info ms-2"><i class="bi bi-shield-fill"></i> Strategic</span>
            <% end %>
          </h2>
          <p class="text-muted mb-0"><%= @supplier.legal_name %></p>
          <div class="mt-2">
            <span class="badge bg-<%= @supplier.status_badge_class %> me-2">
              <%= @supplier.supplier_status %>
            </span>
            <span class="badge bg-secondary me-2"><%= @supplier.supplier_type&.titleize %></span>
            <span class="badge bg-light text-dark"><%= @supplier.supplier_category&.titleize %></span>
          </div>
        </div>
        
        <div class="btn-group">
          <%= link_to edit_supplier_path(@supplier), class: 'btn btn-outline-primary' do %>
            <i class="bi bi-pencil"></i> Edit
          <% end %>
          <%= link_to dashboard_supplier_path(@supplier), class: 'btn btn-outline-info' do %>
            <i class="bi bi-bar-chart"></i> Dashboard
          <% end %>

          <% if @supplier.pending_approval? %>
            <%= link_to approve_supplier_path(@supplier), method: :post, class: 'btn btn-outline-info', 
                data: { confirm: 'Approve this supplier?' } do %>
              <i class="bi bi-check-circle text-success"></i> Approve Supplier
            <% end %>
          <% end %>

          <% if @supplier.approved? %>
            <%= link_to suspend_supplier_path(@supplier), method: :post, class: 'btn btn-outline-info',
                data: { confirm: 'Suspend this supplier?',  } do %>
              <i class="bi bi-pause-circle text-warning"></i> Suspend
            <% end %>
            <%= link_to blacklist_supplier_path(@supplier), method: :post, class: 'btn btn-outline-info',
                data: { confirm: 'Blacklist this supplier?' } do %>
              <i class="bi bi-x-circle text-danger"></i> Blacklist
            <% end %>
          <% end %>
          <% if @supplier.suspended? || @supplier.blacklisted? %>
            <%= link_to reactivate_supplier_path(@supplier), method: :post, class: 'btn btn-outline-info',
                data: { confirm: 'Reactivate this supplier?' } do %>
              <i class="bi bi-arrow-clockwise text-success"></i> Reactivate
            <% end %>
          <% end %>
          <%= link_to supplier_path(@supplier), method: :delete, class: 'btn btn-outline-danger',
              data: { confirm: 'Are you sure you want to delete this supplier?' } do %>
            <i class="bi bi-trash"></i> Delete Supplier
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Performance Summary Cards -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="text-muted mb-0">Overall Rating</h6>
            <i class="bi bi-award text-primary"></i>
          </div>
          <div class="d-flex align-items-end">
            <h2 class="mb-0 me-2"><%= @supplier.overall_rating.to_i %></h2>
            <span class="badge bg-<%= @supplier.rating_badge_class %> mb-1">
              <%= @supplier.rating_label %>
            </span>
          </div>
          <div class="progress mt-2" style="height: 8px;">
            <div class="progress-bar bg-<%= @supplier.rating_badge_class %>" 
                 style="width: <%= @supplier.overall_rating %>%"></div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="text-muted mb-0">Total Spend</h6>
            <i class="bi bi-currency-dollar text-success"></i>
          </div>
          <h2 class="mb-0"><%= number_to_currency(@supplier.total_purchase_value) %></h2>
          <small class="text-muted">
            YTD: <%= number_to_currency(@supplier.purchase_value_ytd) %>
          </small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="text-muted mb-0">On-Time Delivery</h6>
            <i class="bi bi-truck text-info"></i>
          </div>
          <h2 class="mb-0"><%= @supplier.on_time_delivery_rate.to_i %>%</h2>
          <div class="progress mt-2" style="height: 8px;">
            <div class="progress-bar bg-info" 
                 style="width: <%= @supplier.on_time_delivery_rate %>%"></div>
          </div>
          <small class="text-muted">
            <%= @supplier.late_deliveries_count %> late deliveries
          </small>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="text-muted mb-0">Quality Acceptance</h6>
            <i class="bi bi-patch-check text-warning"></i>
          </div>
          <h2 class="mb-0"><%= @supplier.quality_acceptance_rate.to_i %>%</h2>
          <div class="progress mt-2" style="height: 8px;">
            <div class="progress-bar bg-warning" 
                 style="width: <%= @supplier.quality_acceptance_rate %>%"></div>
          </div>
          <small class="text-muted">
            <%= @supplier.quality_issues_count %> quality issues
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content with Tabs -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <!-- Tab Navigation -->
        <div class="card-header bg-white border-0">
          <ul class="nav nav-tabs card-header-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#overview">
                <i class="bi bi-info-circle"></i> Overview
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#addresses">
                <i class="bi bi-geo-alt"></i> Addresses 
                <span class="badge bg-secondary"><%= @addresses.count %></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#contacts">
                <i class="bi bi-person"></i> Contacts
                <span class="badge bg-secondary"><%= @contacts.count %></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#products">
                <i class="bi bi-box-seam"></i> Product Catalog
                <span class="badge bg-secondary"><%= @product_catalog.count %></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#quality">
                <i class="bi bi-shield-check"></i> Quality Issues
                <% if @quality_issues.any? %>
                  <span class="badge bg-danger"><%= @quality_issues.count %></span>
                <% end %>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#documents">
                <i class="bi bi-file-earmark"></i> Documents
                <span class="badge bg-secondary"><%= @documents.count %></span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#activities">
                <i class="bi bi-clock-history"></i> Activities
              </a>
            </li>
          </ul>
        </div>

        <!-- Tab Content -->
        <div class="card-body">
          <div class="tab-content">
            
            <!-- ============================================== -->
            <!-- OVERVIEW TAB -->
            <!-- ============================================== -->
            <div class="tab-pane fade show active" id="overview">
              <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                  <h5 class="mb-3">Basic Information</h5>
                  
                  <table class="table table-sm">
                    <tr>
                      <th width="40%">Supplier Code:</th>
                      <td><strong><%= @supplier.code %></strong></td>
                    </tr>
                    <tr>
                      <th>Legal Name:</th>
                      <td><%= @supplier.legal_name %></td>
                    </tr>
                    <% if @supplier.trade_name.present? %>
                    <tr>
                      <th>Trade Name:</th>
                      <td><%= @supplier.trade_name %></td>
                    </tr>
                    <% end %>
                    <tr>
                      <th>Type:</th>
                      <td><span class="badge bg-secondary"><%= @supplier.supplier_type&.titleize %></span></td>
                    </tr>
                    <tr>
                      <th>Category:</th>
                      <td><%= @supplier.supplier_category&.titleize %></td>
                    </tr>
                    <tr>
                      <th>Status:</th>
                      <td>
                        <span class="badge bg-<%= @supplier.status_badge_class %>">
                          <%= @supplier.supplier_status %>
                        </span>
                      </td>
                    </tr>
                    <% if @supplier.supplier_since.present? %>
                    <tr>
                      <th>Supplier Since:</th>
                      <td><%= @supplier.supplier_since.strftime('%B %d, %Y') %></td>
                    </tr>
                    <% end %>
                  </table>

                  <h5 class="mb-3 mt-4">Contact Information</h5>
                  <table class="table table-sm">
                    <% if @supplier.primary_email.present? %>
                    <tr>
                      <th width="40%">Email:</th>
                      <td>
                        <a href="mailto:<%= @supplier.primary_email %>">
                          <%= @supplier.primary_email %>
                        </a>
                      </td>
                    </tr>
                    <% end %>
                    <% if @supplier.primary_phone.present? %>
                    <tr>
                      <th>Phone:</th>
                      <td><%= @supplier.primary_phone %></td>
                    </tr>
                    <% end %>
                    <% if @supplier.website.present? %>
                    <tr>
                      <th>Website:</th>
                      <td>
                        <a href="<%= @supplier.website %>" target="_blank">
                          <%= @supplier.website %> <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                      </td>
                    </tr>
                    <% end %>
                  </table>

                  <% if @supplier.company_profile.present? %>
                  <h5 class="mb-3 mt-4">Company Profile</h5>
                  <p class="text-muted"><%= simple_format(@supplier.company_profile) %></p>
                  <% end %>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                  <h5 class="mb-3">Financial Terms</h5>
                  
                  <table class="table table-sm">
                    <tr>
                      <th width="40%">Payment Terms:</th>
                      <td><%= @supplier.default_payment_terms&.titleize %></td>
                    </tr>
                    <tr>
                      <th>Payment Method:</th>
                      <td><%= @supplier.payment_method&.titleize %></td>
                    </tr>
                    <tr>
                      <th>Currency:</th>
                      <td><%= @supplier.currency %></td>
                    </tr>
                    <tr>
                      <th>Credit Limit:</th>
                      <td><%= number_to_currency(@supplier.credit_limit_extended) %></td>
                    </tr>
                    <tr>
                      <th>Current Payables:</th>
                      <td>
                        <strong><%= number_to_currency(@supplier.current_payable_balance) %></strong>
                        <% if @supplier.over_credit_limit? %>
                          <span class="badge bg-danger ms-2">Over Limit!</span>
                        <% end %>
                      </td>
                    </tr>
                    <% if @supplier.early_payment_discount_percentage.present? %>
                    <tr>
                      <th>Early Payment Discount:</th>
                      <td>
                        <%= @supplier.early_payment_discount_percentage %>% 
                        if paid within <%= @supplier.early_payment_discount_days %> days
                      </td>
                    </tr>
                    <% end %>
                  </table>

                  <h5 class="mb-3 mt-4">Manufacturing Capabilities</h5>
                  <table class="table table-sm">
                    <tr>
                      <th width="40%">Lead Time:</th>
                      <td><%= @supplier.default_lead_time_days %> days</td>
                    </tr>
                    <tr>
                      <th>Min Order Qty:</th>
                      <td><%= @supplier.minimum_order_quantity %></td>
                    </tr>
                    <% if @supplier.production_capacity_monthly.present? %>
                    <tr>
                      <th>Monthly Capacity:</th>
                      <td><%= number_with_delimiter(@supplier.production_capacity_monthly) %> units</td>
                    </tr>
                    <% end %>
                  </table>

                  <h5 class="mb-3 mt-4">Certifications</h5>
                  <div class="mb-2">
                    <% if @supplier.iso_9001_certified? %>
                      <span class="badge bg-success me-1">
                        <i class="bi bi-patch-check"></i> ISO 9001
                        <% if @supplier.iso_9001_expiry %>
                          (exp: <%= @supplier.iso_9001_expiry.strftime('%m/%Y') %>)
                        <% end %>
                      </span>
                    <% end %>
                    <% if @supplier.iso_14001_certified? %>
                      <span class="badge bg-success me-1">
                        <i class="bi bi-patch-check"></i> ISO 14001
                        <% if @supplier.iso_14001_expiry %>
                          (exp: <%= @supplier.iso_14001_expiry.strftime('%m/%Y') %>)
                        <% end %>
                      </span>
                    <% end %>
                    <% if @supplier.iso_45001_certified? %>
                      <span class="badge bg-success me-1">
                        <i class="bi bi-patch-check"></i> ISO 45001
                        <% if @supplier.iso_45001_expiry %>
                          (exp: <%= @supplier.iso_45001_expiry.strftime('%m/%Y') %>)
                        <% end %>
                      </span>
                    <% end %>
                    <% unless @supplier.iso_certified? %>
                      <span class="text-muted">No certifications on file</span>
                    <% end %>
                  </div>

                  <h5 class="mb-3 mt-4">Performance Scores</h5>
                  <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                      <small>Quality Score</small>
                      <small><strong><%= @supplier.quality_score.to_i %>%</strong></small>
                    </div>
                    <div class="progress" style="height: 6px;">
                      <div class="progress-bar bg-success" style="width: <%= @supplier.quality_score %>%"></div>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                      <small>Delivery Score</small>
                      <small><strong><%= @supplier.delivery_score.to_i %>%</strong></small>
                    </div>
                    <div class="progress" style="height: 6px;">
                      <div class="progress-bar bg-info" style="width: <%= @supplier.delivery_score %>%"></div>
                    </div>
                  </div>
                  <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                      <small>Price Score</small>
                      <small><strong><%= @supplier.price_score.to_i %>%</strong></small>
                    </div>
                    <div class="progress" style="height: 6px;">
                      <div class="progress-bar bg-warning" style="width: <%= @supplier.price_score %>%"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'suppliers/addresses/show' %>
            <%= render 'suppliers/contacts/show' %>
            <%= render 'suppliers/products/show' %>
            <%= render 'suppliers/quality_issues/show' %>
            <%= render 'suppliers/activities/show' %>
            <%= render 'suppliers/documents/show' %>

            <!-- Remaining tabs will be in partials (addresses, contacts, products, etc.) -->
            <!-- We'll create those partial files next -->
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'suppliers/scripts' %>


