<div class="tab-pane fade" id="products">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Product Catalog</h5>
    <a href="<%= new_supplier_product_url(@supplier) %>" class="btn btn-sm btn-primary">
      <i class="bi bi-plus-circle"></i> Add Product
    </a>
  </div>
  
  <div id="productsList">
    <% if @product_catalog.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Product Code</th>
              <th>Product Name</th>
              <th>Supplier Code</th>
              <th>Unit Price</th>
              <th>Lead Time</th>
              <th>MOQ</th>
              <th>Quality Rating</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @product_catalog.each do |ps| %>
              <tr>
                <td><strong><%= ps.product.sku %></strong></td>
                <td><%= ps.product.name %></td>
                <td><%= ps.supplier_item_code %></td>
                <td>
                  <strong><%= number_to_currency(ps.current_unit_price) %></strong>
                  <% if ps.price_trend == 'INCREASING' %>
                    <i class="anticon anticon-arrow-up text-danger" title="Price increasing"></i>
                  <% elsif ps.price_trend == 'DECREASING' %>
                    <i class="anticon anticon-arrow-down text-success" title="Price decreasing"></i>
                  <% end %>
                </td>
                <td><%= ps.lead_time_days %> days</td>
                <td><%= ps.minimum_order_quantity %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="rating-circle rating-sm me-1 
                                <%= ps.quality_rating >= 90 ? 'rating-success' : 
                                    ps.quality_rating >= 75 ? 'rating-primary' : 
                                    ps.quality_rating >= 60 ? 'rating-warning' : 'rating-danger' %>">
                      <%= ps.quality_rating.to_i %>
                    </div>
                  </div>
                </td>
                <td>
                  <% if ps.is_preferred_supplier %>
                    <span class="badge bg-warning">Preferred</span>
                  <% end %>
                  <% if ps.is_approved_supplier %>
                    <span class="badge bg-success">Approved</span>
                  <% else %>
                    <span class="badge bg-secondary">Pending</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a class="btn btn-outline-primary" href="<%= edit_supplier_product_url(@supplier, ps) %>">
                      <i class="anticon anticon-edit"></i>
                    </a>
                    <a class="btn btn-outline-danger" onclick="deleteProduct(<%= ps.id %>)">
                      <i class="anticon anticon-delete"></i>
                    </a>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
        <p class="mt-3">No products in catalog yet</p>
      </div>
    <% end %>
  </div>
</div>