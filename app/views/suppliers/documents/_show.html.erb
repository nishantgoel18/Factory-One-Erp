<div class="tab-pane fade" id="documents">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Documents</h5>
    <a href="<%= new_supplier_document_url(@supplier) %>" class="btn btn-sm btn-primary">
      <i class="bi bi-plus-circle"></i> Upload Document
    </a>
  </div>
  
  <div id="documentsList">
    <% if @documents.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Document Title</th>
              <th>Type</th>
              <th>Category</th>
              <th>Uploaded</th>
              <th>Expiry</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @documents.each do |doc| %>
              <tr>
                <td>
                  <i class="bi bi-file-earmark-pdf text-danger"></i>
                  <strong><%= doc.document_title %></strong>
                </td>
                <td><%= doc.document_type.titleize %></td>
                <td><small><%= doc.document_category&.titleize %></small></td>
                <td><%= doc.created_at.strftime('%m/%d/%Y') %></td>
                <td>
                  <% if doc.expiry_date %>
                    <%= doc.expiry_date.strftime('%m/%d/%Y') %>
                    <% if doc.expired? %>
                      <span class="badge bg-danger ms-1">Expired</span>
                    <% elsif doc.expiring_soon? %>
                      <span class="badge bg-warning ms-1">Expiring Soon</span>
                    <% end %>
                  <% else %>
                    -
                  <% end %>
                </td>
                <td>
                  <% if doc.is_active %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a class="btn btn-outline-primary" href="<%= edit_supplier_document_url(@supplier, doc) %>">
                      <i class="anticon anticon-edit"></i>
                    </a>
                    <button class="btn btn-outline-danger" onclick="deleteDocument(<%= doc.id %>)">
                      <i class="anticon anticon-delete"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-file-earmark" style="font-size: 3rem;"></i>
        <p class="mt-3">No documents uploaded yet</p>
      </div>
    <% end %>
  </div>
</div>