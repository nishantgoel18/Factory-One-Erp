<!-- app/views/labor_time_entries/shop_floor.html.erb -->

<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">My Timesheet</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="#">Core Manufacturing</a>
        <a class="breadcrumb-item" href="#">Labor Time Entries</a>
        <span class="breadcrumb-item active">My Timesheet</span>
      </nav>
    </div>
  </div>
  <!-- Header -->
  <!-- app/views/labor_time_entries/my_timesheet.html.erb -->

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1">
        <i class="bi bi-calendar-check"></i> My Timesheet
      </h2>
      <p class="text-muted mb-0"><%= @date.strftime("%A, %B %d, %Y") %></p>
    </div>
    
    <!-- Date Navigation -->
    <div class="btn-group">
      <%= link_to my_timesheet_path(date: @date - 1.day), 
          class: "btn btn-outline-secondary" do %>
        <i class="bi bi-chevron-left"></i> Previous
      <% end %>
      
      <%= link_to my_timesheet_path(date: Date.current), 
          class: "btn btn-primary" do %>
        Today
      <% end %>
      
      <%= link_to my_timesheet_path(date: @date + 1.day), 
          class: "btn btn-outline-secondary" do %>
        Next <i class="bi bi-chevron-right"></i>
      <% end %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card  border-primary h-100">
        <div class="card-body">
          <h6 class="text-muted mb-2 small">Total Hours</h6>
          <h2 class="mb-0 text-primary">
            <%= @summary[:total_hours] %> hrs
          </h2>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card  border-success h-100">
        <div class="card-body">
          <h6 class="text-muted mb-2 small">Time Entries</h6>
          <h2 class="mb-0 text-success">
            <%= @summary[:total_entries] %>
          </h2>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card  border-info h-100">
        <div class="card-body">
          <h6 class="text-muted mb-2 small">Operations</h6>
          <h2 class="mb-0 text-info">
            <%= @summary[:operations_count] %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Timesheet Entries -->
  <div class="card ">
    <div class="card-header d-flex justify-content-start align-items-center bg-primary">
      <h6 class="mb-0">
        <i class="bi bi-list-ul"></i> Time Entries
      </h6>
    </div>
    <div class="card-body p-0">
      <% if @entries.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Work Order</th>
                <th>Operation</th>
                <th>Type</th>
                <th>Clock In</th>
                <th>Clock Out</th>
                <th>Hours</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <% @entries.each do |entry| %>
                <tr>
                  <td>
                    <%= link_to entry.work_order_operation.work_order.wo_number,
                        work_order_path(entry.work_order_operation.work_order),
                        class: "text-decoration-none fw-semibold" %>
                    <br>
                    <small class="text-muted">
                      <%= entry.work_order_operation.work_order.product.sku %>
                    </small>
                  </td>
                  <td>
                    <span class="badge bg-secondary">Seq <%= entry.work_order_operation.sequence_no %></span>
                    <br>
                    <%= entry.work_order_operation.operation_name %>
                    <br>
                    <small class="text-muted">
                      <%= entry.work_order_operation.work_center.name %>
                    </small>
                  </td>
                  <td>
                    <span class="badge bg-<%= entry.entry_type_badge_class %>">
                      <%= entry.entry_type_label %>
                    </span>
                  </td>
                  <td>
                    <%= entry.clock_in_at.strftime("%I:%M %p") %>
                  </td>
                  <td>
                    <% if entry.clock_out_at.present? %>
                      <%= entry.clock_out_at.strftime("%I:%M %p") %>
                    <% else %>
                      <span class="badge bg-success">Active</span>
                    <% end %>
                  </td>
                  <td>
                    <% if entry.clock_out_at.present? %>
                      <strong><%= entry.hours_worked.round(2) %> hrs</strong>
                    <% else %>
                      <span class="text-muted">
                        <%= entry.elapsed_time_display %> (ongoing)
                      </span>
                    <% end %>
                  </td>
                  <td>
                    <% if entry.notes.present? %>
                      <small><%= entry.notes %></small>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="table-light">
              <tr>
                <th colspan="5" class="text-end">Total Hours:</th>
                <th colspan="2">
                  <strong class="fs-5"><%= @summary[:total_hours] %> hrs</strong>
                </th>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="text-center text-muted py-5">
          <i class="bi bi-calendar-x fs-1 d-block mb-3"></i>
          <p>No time entries for this date.</p>
          <%= link_to "Go to Shop Floor", shop_floor_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>