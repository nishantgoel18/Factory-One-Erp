<style type="text/css">
  /* ============================================================================
   * RFQ TO PO CONVERSION - CUSTOM STYLES
   * ============================================================================
   * Location: app/assets/stylesheets/rfq_conversion.css
   * ============================================================================ */

  /* ===================================
   * CONVERSION FORM STYLES
   * =================================== */

  .conversion-form {
    max-width: 1400px;
    margin: 0 auto;
  }

  .conversion-form .card {
    border-radius: 0.5rem;
    transition: box-shadow 0.3s ease;
  }

  .conversion-form .card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
  }

  /* Warehouse Selection Highlight */
  .conversion-form #warehouse_id.is-valid {
    border-color: #198754;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right calc(0.375em + 0.1875rem) center;
    background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    padding-right: calc(1.5em + 0.75rem);
  }

  /* ===================================
   * SUMMARY CARD STYLES
   * =================================== */

  .conversion-summary-card {
    position: sticky;
    top: 20px;
  }

  .conversion-summary-card .card-header {
    background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
  }

  .conversion-summary-card .badge {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  /* ===================================
   * SUPPLIER PREVIEW CARDS
   * =================================== */

  .supplier-preview-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .supplier-preview-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
  }

  .supplier-preview-card .card-header {
    cursor: pointer;
    user-select: none;
  }

  .supplier-preview-card .card-header:hover {
    background-color: #f8f9fa !important;
  }

  /* Items Table in Supplier Card */
  .supplier-preview-card .table {
    font-size: 0.9rem;
  }

  .supplier-preview-card .table thead {
    position: sticky;
    top: 0;
    z-index: 10;
  }

  /* ===================================
   * RFQ CONVERSION BADGES
   * =================================== */

  .badge-rfq-linked {
    background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    color: white;
    padding: 0.35rem 0.65rem;
    border-radius: 0.25rem;
  }

  .badge-conversion-ready {
    background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    color: #000;
    padding: 0.35rem 0.65rem;
    animation: pulse-warning 2s infinite;
  }

  @keyframes pulse-warning {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(255, 193, 7, 0);
    }
  }

  .badge-converted {
    background: linear-gradient(135deg, #198754 0%, #146c43 100%);
    color: white;
    padding: 0.35rem 0.65rem;
  }

  /* ===================================
   * PRICE VARIANCE INDICATORS
   * =================================== */

  .price-variance {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .price-variance.over-target {
    color: #dc3545;
  }

  .price-variance.under-target {
    color: #198754;
  }

  .price-variance.at-target {
    color: #6c757d;
  }

  /* Price Variance Icons */
  .price-variance::before {
    font-family: 'bootstrap-icons';
    font-size: 0.875rem;
  }

  .price-variance.over-target::before {
    content: "\F145"; /* bi-arrow-up */
  }

  .price-variance.under-target::before {
    content: "\F148"; /* bi-arrow-down */
  }

  /* ===================================
   * TRACEABILITY CHAIN DISPLAY
   * =================================== */

  .traceability-chain {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background: #f8f9fa;
    border-left: 3px solid #17a2b8;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
  }

  .traceability-chain code {
    background: white;
    padding: 0.125rem 0.375rem;
    border-radius: 0.2rem;
    color: #0d6efd;
  }

  .traceability-arrow {
    color: #6c757d;
    font-weight: bold;
  }

  /* ===================================
   * RFQ ITEMS TABLE ENHANCEMENTS
   * =================================== */

  .rfq-items-table tr.selected-item {
    background-color: #d1f4dd !important;
    border-left: 4px solid #198754;
  }

  .rfq-items-table tr.selected-item:hover {
    background-color: #c3edd0 !important;
  }

  .rfq-items-table tr.unselected-item {
    opacity: 0.6;
  }

  .rfq-items-table tr.unselected-item:hover {
    opacity: 0.8;
  }

  /* Critical Item Highlight */
  .rfq-items-table tr.critical-item {
    border-left: 4px solid #dc3545;
  }

  /* ===================================
   * PO LINE ITEMS WITH RFQ SOURCE
   * =================================== */

  .po-line-rfq-source {
    background: linear-gradient(90deg, #e7f3ff 0%, transparent 100%);
    border-left: 3px solid #0d6efd;
  }

  .po-line-rfq-source:hover {
    background: linear-gradient(90deg, #d4e9ff 0%, #f8f9fa 100%);
  }

  /* RFQ Badge on PO Lines */
  .po-line-rfq-badge {
    background: #0d6efd;
    color: white;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  /* ===================================
   * CONVERSION TIMELINE
   * =================================== */

  .conversion-timeline {
    position: relative;
    padding-left: 2rem;
  }

  .conversion-timeline::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
  }

  .conversion-timeline-item {
    position: relative;
    padding-bottom: 1.5rem;
  }

  .conversion-timeline-item::before {
    content: '';
    position: absolute;
    left: -1.375rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: white;
    border: 2px solid #0d6efd;
  }

  .conversion-timeline-item.completed::before {
    background: #198754;
    border-color: #198754;
  }

  /* ===================================
   * COST SAVINGS DISPLAY
   * =================================== */

  .cost-savings-display {
    background: linear-gradient(135deg, #d1f4dd 0%, #c3edd0 100%);
    border: 1px solid #198754;
    border-radius: 0.5rem;
    padding: 1rem;
    text-align: center;
  }

  .cost-savings-amount {
    font-size: 2rem;
    font-weight: bold;
    color: #198754;
    display: block;
  }

  .cost-savings-percentage {
    font-size: 1.25rem;
    color: #146c43;
  }

  /* Animated Savings Counter */
  @keyframes countUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .cost-savings-display.animate .cost-savings-amount {
    animation: countUp 0.8s ease-out;
  }

  /* ===================================
   * RESPONSIVE ADJUSTMENTS
   * =================================== */

  @media (max-width: 768px) {
    .conversion-form {
      padding: 0.5rem;
    }
    
    .conversion-summary-card {
      position: static;
      margin-bottom: 1rem;
    }
    
    .supplier-preview-card .table {
      font-size: 0.8rem;
    }
    
    .cost-savings-amount {
      font-size: 1.5rem;
    }
  }

  /* ===================================
   * LOADING STATES
   * =================================== */

  .conversion-loading {
    position: relative;
    pointer-events: none;
    opacity: 0.6;
  }

  .conversion-loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 2rem;
    height: 2rem;
    margin: -1rem 0 0 -1rem;
    border: 3px solid #f3f3f3;
    border-top: 3px solid #0d6efd;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* ===================================
   * BOOTSTRAP UTILITIES EXTENSIONS
   * =================================== */

  .bg-opacity-10 {
    background-opacity: 0.1 !important;
  }

  .bg-opacity-20 {
    background-opacity: 0.2 !important;
  }

  .text-success-emphasis {
    color: #146c43 !important;
  }

  .border-success-subtle {
    border-color: #d1f4dd !important;
  }

  /* ===================================
   * PRINT STYLES
   * =================================== */

  @media print {
    .conversion-form .card {
      break-inside: avoid;
    }
    
    .supplier-preview-card {
      page-break-inside: avoid;
    }
    
    .badge-conversion-ready {
      animation: none;
    }
  }

  /* ===================================
   * ACCESSIBILITY IMPROVEMENTS
   * =================================== */

  .conversion-form :focus-visible {
    outline: 2px solid #0d6efd;
    outline-offset: 2px;
  }

  .conversion-form .btn:focus-visible {
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
  }

  /* Screen Reader Only Content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>