<!-- app/views/work_order_mailer/work_order_cancelled.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .header { background-color: #dc3545; color: white; padding: 20px; text-align: center; }
    .content { padding: 20px; }
    .detail-row { padding: 8px 0; border-bottom: 1px solid #eee; }
    .label { font-weight: bold; display: inline-block; width: 150px; }
    .footer { background-color: #f8f9fa; padding: 15px; text-align: center; font-size: 12px; color: #6c757d; margin-top: 20px; }
  </style>
</head>
<body>
  <div class="header">
    <h2>Work Order Cancelled</h2>
  </div>
  
  <div class="content">
    <p>The following work order has been cancelled:</p>
    
    <div class="detail-row">
      <span class="label">Work Order Number:</span>
      <span><strong><%= @work_order.wo_number %></strong></span>
    </div>
    
    <div class="detail-row">
      <span class="label">Product:</span>
      <span><%= @work_order.product.code %> - <%= @work_order.product.name %></span>
    </div>
    
    <div class="detail-row">
      <span class="label">Quantity:</span>
      <span><%= @work_order.quantity_to_produce %> <%= @work_order.uom.symbol %></span>
    </div>
    
    <div class="detail-row">
      <span class="label">Priority:</span>
      <span><%= @work_order.priority %></span>
    </div>
    
    <div class="detail-row">
      <span class="label">Cancelled At:</span>
      <span><%= Time.current.strftime("%B %d, %Y at %I:%M %p") %></span>
    </div>
    
    <% if @work_order.notes.present? %>
      <div class="detail-row">
        <span class="label">Original Notes:</span>
        <span><%= @work_order.notes %></span>
      </div>
    <% end %>
    
    <p style="margin-top: 20px; padding: 15px; background-color: #fff3cd; border-left: 4px solid #ffc107;">
      <strong>⚠️ Note:</strong> All allocated materials have been returned to inventory and pending operations have been cancelled.
    </p>
  </div>
  
  <div class="footer">
    <p>This is an automated notification from your ERP System. Please do not reply to this email.</p>
  </div>
</body>
</html>