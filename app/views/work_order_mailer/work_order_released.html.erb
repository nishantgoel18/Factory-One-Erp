<!-- app/views/work_order_mailer/work_order_released.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background: #0d6efd; color: white; padding: 20px; text-align: center; }
    .content { background: #f8f9fa; padding: 20px; margin: 20px 0; }
    .detail-row { padding: 10px 0; border-bottom: 1px solid #dee2e6; }
    .detail-label { font-weight: bold; color: #6c757d; }
    .btn { display: inline-block; padding: 10px 20px; background: #0d6efd; color: white; 
           text-decoration: none; border-radius: 5px; margin: 10px 0; }
    .footer { text-align: center; padding: 20px; color: #6c757d; font-size: 12px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>Work Order Released to Production</h2>
    </div>
    
    <div class="content">
      <p>Dear Production Team,</p>
      
      <p>The following work order has been released to production and is ready to start:</p>
      
      <div class="detail-row">
        <span class="detail-label">WO Number:</span> <%= @work_order.wo_number %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Product:</span> <%= @work_order.product.code %> - <%= @work_order.product.name %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Quantity:</span> <%= @work_order.quantity_to_produce %> <%= @work_order.uom.symbol %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Priority:</span> <%= @work_order.priority %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Scheduled Start:</span> <%= @work_order.scheduled_start_date.strftime("%B %d, %Y") %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Scheduled End:</span> <%= @work_order.scheduled_end_date.strftime("%B %d, %Y") %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Warehouse:</span> <%= @work_order.warehouse.name %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Operations Count:</span> <%= @work_order.work_order_operations.count %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Materials Required:</span> <%= @work_order.work_order_materials.count %>
      </div>
      
      <% if @work_order.notes.present? %>
        <div class="detail-row">
          <span class="detail-label">Notes:</span><br>
          <%= simple_format(@work_order.notes) %>
        </div>
      <% end %>
      
      <p style="text-align: center; margin-top: 20px;">
        <a href="<%= work_order_url(@work_order) %>" class="btn">View Work Order Details</a>
      </p>
    </div>
    
    <div class="footer">
      <p>This is an automated notification from FactoryOneERP System.</p>
      <p>Please do not reply to this email.</p>
    </div>
  </div>
</body>
</html>