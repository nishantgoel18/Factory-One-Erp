<!-- app/views/work_order_mailer/overdue_alert.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background: #dc3545; color: white; padding: 20px; text-align: center; }
    .content { background: #f8f9fa; padding: 20px; margin: 20px 0; }
    .alert { background: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin: 15px 0; }
    .detail-row { padding: 10px 0; border-bottom: 1px solid #dee2e6; }
    .detail-label { font-weight: bold; color: #6c757d; }
    .danger { color: #dc3545; font-weight: bold; }
    .btn { display: inline-block; padding: 10px 20px; background: #dc3545; color: white; 
           text-decoration: none; border-radius: 5px; margin: 10px 0; }
    .footer { text-align: center; padding: 20px; color: #6c757d; font-size: 12px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>âš  OVERDUE WORK ORDER ALERT</h2>
    </div>
    
    <div class="content">
      <div class="alert">
        <strong>ATTENTION REQUIRED:</strong> The following work order is overdue and needs immediate attention.
      </div>
      
      <div class="detail-row">
        <span class="detail-label">WO Number:</span> <%= @work_order.wo_number %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Product:</span> <%= @work_order.product.code %> - <%= @work_order.product.name %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Status:</span> <%= @work_order.status.titleize %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Scheduled End Date:</span> <%= @work_order.scheduled_end_date.strftime("%B %d, %Y") %>
      </div>
      <div class="detail-row">
        <span class="detail-label">Days Overdue:</span> 
        <span class="danger"><%= @days_overdue %> days</span>
      </div>
      <div class="detail-row">
        <span class="detail-label">Progress:</span> <%= @work_order.progress_percentage.round(0) %>%
      </div>
      
      <p style="margin-top: 20px;">
        <strong>Action Required:</strong> Please review this work order and take necessary steps to complete it as soon as possible.
      </p>
      
      <p style="text-align: center; margin-top: 20px;">
        <a href="<%= work_order_url(@work_order) %>" class="btn">View Work Order</a>
      </p>
    </div>
    
    <div class="footer">
      <p>This is an automated alert from your ERP System.</p>
      <p>Please do not reply to this email.</p>
    </div>
  </div>
</body>
</html>