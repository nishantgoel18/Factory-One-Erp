<%# app/views/unit_of_measures/index.html.erb %>

<div class="main-content">
    <%# Alerts %>
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">Unit of Measure</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item">
                    <i class="anticon anticon-home m-r-5"></i>Home
                </a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <span class="breadcrumb-item active">Unit of Measure</span>
            </nav>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="m-t-10">

                        <div class="table-responsive">

                            <%= link_to "New Unit", new_unit_of_measure_path, class: "btn btn-primary btn-sm" %>
                            <br><br>

                            <table class="table admins_table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Symbol</th>
                                        <th>Decimal Allowed?</th>
                                        <th>Created At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @unit_of_measures.each do |uom| %>
                                        <tr>
                                            <td><%= uom.id %></td>
                                            <td><%= uom.name %></td>
                                            <td><%= uom.symbol %></td>
                                            <td><%= uom.is_decimal ? "Yes" : "No" %></td>
                                            <td><%= uom.created_at.strftime("%b %d, %Y") %></td>

                                            <td>
                                                <%= link_to "View", unit_of_measure_path(uom) %> |
                                                <%= link_to "Edit", edit_unit_of_measure_path(uom) %> |
                                                <%= link_to "Delete",
                                                    delete_unit_of_measure_path(uom),
                                                    method: :delete,
                                                    data: { confirm: "Are you sure?" },
                                                    class: "confirm-delete"
                                                %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>