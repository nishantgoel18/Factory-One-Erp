<div class="form-group">
    <div class="row">

        <div class="col-lg-4">
            <label class="font-weight-semibold" for="unit_of_measure_name">Name:</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Unit Name (e.g. Kilogram, Meter, Box)" %>
        </div>

        <div class="col-lg-4">
            <label class="font-weight-semibold" for="unit_of_measure_symbol">Symbol:</label>
            <%= f.text_field :symbol, class: "form-control", placeholder: "Symbol (e.g. kg, m, box)" %>
        </div>

        <div class="col-lg-4">
            <label class="font-weight-semibold" for="unit_of_measure_is_decimal">Decimals Allowed?</label>
            <%= f.select :is_decimal,
                [["Yes", true], ["No", false]],
                {},
                class: "form-control"
            %>
        </div>
    </div>
</div>

<div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
</div>