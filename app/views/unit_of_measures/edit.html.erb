<%# app/views/unit_of_measures/edit.html.erb %>

<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">Edit Unit of Measure</h2>

        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item">
                    <i class="anticon anticon-home m-r-5"></i>Home
                </a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= unit_of_measures_path %>">Unit of Measure</a>
                <span class="breadcrumb-item active">Edit Unit of Measure</span>
            </nav>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="m-t-10">

                        <%= form_with model: @unit_of_measure,
                                      url: unit_of_measure_path(@unit_of_measure),
                                      method: :patch,
                                      local: true,
                                      html: { enctype: "multipart/form-data" } do |f| %>

                            <%= render 'layouts/error_messages', object: @unit_of_measure %>
                            <%= render 'unit_of_measures/form', f: f %>

                        <% end %>

                    </div>

                </div>
            </div>

        </div>
    </div>

</div>