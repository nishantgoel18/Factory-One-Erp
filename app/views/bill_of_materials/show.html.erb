<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">View Product</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= product_path(@product) %>"><%= @product.name %></a>
                <span class="breadcrumb-item active">New <%= @product.name %> BOM</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-box me-2"></i> <%= @bill_of_material.name %> (Code: <%= @bill_of_material.code %>)
                    <small class="text-muted"><%= @bill_of_material.revision %></small>
                </h2>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="m-t-10">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th width="20%">Product</th>
                                        <td><%= link_to @bill_of_material.product.name, @bill_of_material.product %></td>
                                    </tr>

                                    <tr>
                                        <th>Code</th>
                                        <td><%= @bill_of_material.code %></td>
                                    </tr>

                                    <tr>
                                        <th>Name</th>
                                        <td><%= @bill_of_material.name %></td>
                                    </tr>

                                    <tr>
                                        <th>Revision</th>
                                        <td><%= @bill_of_material.revision %></td>
                                    </tr>

                                    <tr>
                                        <th>Status</th>
                                        <td><%= @bill_of_material.status %></td>
                                    </tr>

                                    <tr>
                                        <th>Default BOM?</th>
                                        <td><%= @bill_of_material.is_default ? "Yes" : "No" %></td>
                                    </tr>

                                    <tr>
                                        <th>Effective From</th>
                                        <td><%= @bill_of_material.effective_from.strftime("%b %d, %Y") %></td>
                                    </tr>

                                    <tr>
                                        <th>Effective To</th>
                                        <td><%= @bill_of_material.effective_to.present? ? @bill_of_material.effective_to.strftime("%b %d, %Y") : "N/A" %></td>
                                    </tr>

                                    <tr>
                                        <th>Notes</th>
                                        <td><%= @bill_of_material.notes.presence || "N/A" %></td>
                                    </tr>

                                    <tr>
                                        <th>Created By</th>
                                        <td><%= @bill_of_material.created_by&.name || "N/A" %></td>
                                    </tr>

                                    <tr>
                                        <th>Created At</th>
                                        <td><%= @bill_of_material.created_at.strftime("%b %d, %Y") %></td>
                                    </tr>

                                    <tr>
                                        <th>Actions</th>
                                        <td>
                                            <% if @bill_of_material.can_be_activated? %>
                                                <%= link_to "Activate", activate_product_bill_of_material_url(@product, @bill_of_material) %> |
                                            <% end -%>
                                            <%= link_to "Edit", edit_product_bill_of_material_path(@product, @bill_of_material) %> |
                                            <%= link_to "Delete", delete_product_bill_of_material_path(@product, @bill_of_material),
                                                method: :delete,
                                                data: { confirm: "Are you sure?" }, class: "confirm-delete"  %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <hr>

                    <h4 class="mt-4 mb-3">BOM Items</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Component</th>
                                    <th>Quantity</th>
                                    <th>UoM</th>
                                    <th>Scrap %</th>
                                    <th>Per Unit Cost</th>
                                    <th>Line Note</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% @bill_of_material.bom_items.non_deleted.where(deleted: false).each_with_index do |item, index| %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= link_to item.component.name, item.component %></td>
                                        <td><%= item.quantity %></td>
                                        <td><%= link_to item.uom.symbol, item.uom %></td>
                                        <td><%= item.scrap_percent %></td>
                                        <td>$<%= item.component.standard_cost %></td>
                                        <td><%= item.line_note.presence || "â€”" %></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</div>