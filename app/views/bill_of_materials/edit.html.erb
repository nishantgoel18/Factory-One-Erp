<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">Edit <%= @product.name %> BOMs</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item">
                    <i class="anticon anticon-home m-r-5"></i>Home
                </a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= products_path %>">Products</a>
                <a class="breadcrumb-item" href="<%= product_path(@product) %>"><%= @product.name %></a>
                <span class="breadcrumb-item active">Edit <%= @product.name %> BOM</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="m-t-10">
                        <%= form_with model: [@product, @bill_of_material], local: true do |f| %>
                            <%= render 'form', f: f %>
                        <% end %>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>