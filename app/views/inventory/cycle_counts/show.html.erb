<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Cycle Counts</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="/inventory/dashboard">Inventory Management</a>
        <a class="breadcrumb-item" href="/inventory/cycle_counts">Cycle Counts</a>

        <span class="breadcrumb-item active">View Cycle Count</span>
      </nav>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <h2 class="mb-2">
        <i class="bi bi-box-seam me-2"></i>
        <%= @cycle_count.reference_no %>
      </h2>
      <p class="text-muted mb-0">
        Created on <%= @cycle_count.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        <% if @cycle_count.scheduled_by %>
          by <%= @cycle_count.scheduled_by.full_name %>
        <% end %>
      </p>
    </div>

    <div class="text-end">
      <%= render 'shared/status_badge', status: @cycle_count.status %>
      
      <% if @cycle_count.status == 'POSTED' %>
        <span class="badge bg-success ms-2">
          <i class="bi bi-check-circle me-1"></i>
          Posted on <%= @cycle_count.posted_at.strftime('%b %d, %Y') %>
        </span>
      <% end %>
      
      <!-- Actions -->
      <div class="btn-group ms-2">
        <% if @cycle_count.can_edit? %>
          <%= link_to edit_inventory_cycle_count_path(@cycle_count), 
              class: 'btn btn-sm btn-outline-primary' do %>
             Edit
          <% end %>
        <% end %>

        <% if @cycle_count.can_post? %>
          <%= link_to post_count_inventory_cycle_count_path(@cycle_count), 
              method: :get,
              data: { confirm: 'Post this Cycle Count? Stock levels will be updated.' },
              class: 'btn btn-sm btn-outline-success' do %>
            <i class="bi bi-check-circle me-2"></i>Post Adjustment
          <% end %>
        <% end %>
            
        <%= link_to print_inventory_cycle_count_path(@cycle_count, format: :pdf), 
            target: '_blank',
            class: 'btn btn-sm btn-outline' do %>
          <i class="bi bi-printer me-2"></i>Print Cycle Count
        <% end %>
            
        <% if @cycle_count.can_edit? %>
          <%= link_to inventory_cycle_count_path(@cycle_count), 
              method: :delete,
              data: { confirm: 'Delete this Cycle Count?' },
              class: 'btn btn-sm btn-outline-danger' do %>
            <i class="bi bi-trash me-2"></i>Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <% case @cycle_count.status %>
  <% when 'SCHEDULED' %>
    <%= link_to 'Start Counting', start_counting_inventory_cycle_count_path(@cycle_count),
        method: :post,
        class: 'btn btn-primary' %>
        
  <% when 'IN_PROGRESS' %>
    <div class="alert alert-info">Record counted quantities for each item</div>
    <%= link_to 'Complete Count', complete_count_inventory_cycle_count_path(@cycle_count),
        method: :post,
        data: { confirm: 'All items counted?' },
        class: 'btn btn-success' %>
        
  <% when 'COMPLETED' %>
    <h4>Variance Summary</h4>
    <p>Accuracy: <%= @cycle_count.accuracy_percentage %>%</p>
    <%= link_to 'Post Count', post_count_inventory_cycle_count_path(@cycle_count),
        method: :post,
        data: { confirm: 'Adjust stock based on variances?' },
        class: 'btn btn-success' %>
  <% end %>
  <br /><br />
  <div class="row">
    <!-- Left Column -->
    <div class="col-md-8">
      <!-- Cycle Count Information -->
      <div class="card mb-4">
        <div class="card-header bg-info d-flex align-items-center">
          <h5 class="mb-0">Basic Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Warehouse:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-building me-1"></i>
                  <strong><%= @cycle_count.warehouse.name %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Count Type:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-building me-1"></i>
                  <strong><%= @cycle_count.count_type&.titleize %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Status:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-flag me-1"></i>
                  <strong><%= @cycle_count.status %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Scheduled At:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-calendar-event me-1"></i>
                  <strong><%= @cycle_count.scheduled_at&.strftime("%b %d, %Y %I:%M %p") %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Total Lines:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-list-ol me-1"></i>
                  <strong><%= @cycle_count.total_lines_count %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Count Completed At:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-check-circle me-1"></i>
                  <strong><%= @cycle_count.count_completed_at&.strftime("%b %d, %Y %I:%M %p") || "Not Completed" %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Lines With Variance:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-exclamation-triangle me-1 text-warning"></i>
                  <strong><%= @cycle_count.lines_with_variance_count %></strong>
                </dd>
              </dl>
            </div>
            <div class="col-md-6"></div>
            
            <div class="col-md-12">
              <hr />
              <dl class="row mb-0">
                <dt class="col-sm-2">Notes:</dt>
                <dd class="col-sm-10">
                  <i class="bi bi-pencil-square me-1"></i>
                  <strong><%= @cycle_count.notes.presence || "-" %></strong>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Received Items -->
      <div class="card mb-4">
        <div class="card-header bg-info d-flex align-items-center">
          <h5 class="mb-0">Cycle Count Lines</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <tr>
                <th>Product</th>
                <th>Location</th>
                <th>Batch</th>
                <th>System Qty</th>
                <th>Counted Qty</th>
                <th>Variance</th>
                <th>UOM</th>
                <th>Status</th>
              </tr>

              <tbody>
                <% @lines.each do |line| %>
                  <tr>
                    <td>
                      <strong><%= line.product.sku %></strong><br>
                      <small class="text-muted"><%= line.product.name %></small>
                    </td>
                    <td>
                      <span class="badge bg-secondary">
                        <%= line.location.code %>
                      </span>
                      <br><small class="text-muted"><%= line.location.name %></small>
                    </td>
                    <td><%= line.batch&.batch_number || "-" %></td>
                    <td><%= line.system_qty %></td>
                    <td><%= line.counted_qty %></td>
                    <td><%= line.variance %></td>
                    <td><%= line.uom.symbol %></td>
                    <td><%= line.line_status %></td>
                  </tr>
                <% end %>

              <tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Stock Transactions (if posted) -->
      <% if @cycle_count.status == 'POSTED' %>
        <div class="card">
          <div class="card-header bg-info d-flex align-items-center">
            <h5 class="mb-0">
              <i class="bi bi-arrow-repeat me-2"></i>
              Stock Transactions Created
            </h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-sm align-middle mb-0">
                <thead>
                  <tr>
                    <th>Transaction Type</th>
                    <th>Product</th>
                    <th>Location</th>
                    <th>Quantity</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% StockTransaction.where(
                        reference_type: 'ADJUSTMENT', 
                        reference_id: @cycle_count.id.to_s,
                        deleted: false
                      ).includes(:product, :from_location).each do |txn| %>
                    <tr>
                      <td>
                        <span class="badge bg-success">
                          <%= txn.txn_type %>
                        </span>
                      </td>
                      <td><%= txn.product.sku %></td>
                      <td><%= txn.from_location&.code || txn.to_location&.code %></td>
                      <td><strong><%= txn.txn_type == 'ADJUST_POS' ? '+' : '-' %><%= txn.quantity.to_i %></strong></td>
                      <td><%= txn.created_at.strftime('%b %d, %Y %I:%M %p') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Summary -->
    <div class="col-md-4">
      <!-- Status Info -->
      <div class="card mb-4">
        <div class="card-header bg-info d-flex align-items-center">
          <h6 class="mb-0">Status Information</h6>
        </div>
        <div class="card-body">
          <% if @cycle_count.status == 'DRAFT' %>
            <div class="alert alert-warning mb-3">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <strong>Draft Status</strong><br>
              <small>This receipt has not been posted yet. Stock levels are not updated.</small>
            </div>
            
            <% if @cycle_count.can_post? %>
              <%= link_to post_adjustment_inventory_cycle_count_path(@cycle_count), 
                  method: :get,
                  data: { confirm: 'Post this Cycle Count? Stock levels will be updated immediately.' },
                  class: 'btn btn-success w-100' do %>
                <i class="bi bi-check-circle me-1"></i> Post Adjustment Now
              <% end %>
            <% end %>
          <% else %>
            <div class="alert alert-success mb-0">
              <i class="bi bi-check-circle-fill me-2"></i>
              <strong>Posted Successfully</strong><br>
              <small>Stock levels have been updated.</small>
            </div>
          <% end %>
        </div>
      </div>

      <% if @cycle_count.warehouse %>
        <div class="card mt-4">
          <div class="card-header bg-info d-flex align-items-center">
            <h6 class="mb-0">Warehouse Info</h6>
          </div>
          <div class="card-body">
            <h6 class="text-primary mb-2">
              <i class="bi bi-building"></i>
              <%= @cycle_count.warehouse.name %>
            </h6>
            <% if @cycle_count.warehouse.address.present? %>
              <p class="text-muted small mb-0">
                <%= simple_format(@cycle_count.warehouse.address) %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>