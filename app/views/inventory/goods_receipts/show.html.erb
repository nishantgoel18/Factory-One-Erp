<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Goods Receipts</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="/inventory/dashboard">Inventory Management</a>
        <a class="breadcrumb-item" href="/inventory/goods_receipts">Goods Receipts</a>

        <span class="breadcrumb-item active">View Goods Receipt</span>
      </nav>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <h2 class="mb-2">
        <i class="bi bi-box-seam me-2"></i>
        <%= @goods_receipt.reference_no %>
      </h2>
      <p class="text-muted mb-0">
        Created on <%= @goods_receipt.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        <% if @goods_receipt.created_by %>
          by <%= @goods_receipt.created_by.full_name %>
        <% end %>
      </p>
    </div>

    <div class="text-end">
      <%= render 'shared/status_badge', status: @goods_receipt.status %>
      
      <% if @goods_receipt.status == 'POSTED' %>
        <span class="text-white badge bg-success ms-2">
          <i class="bi bi-check-circle me-1"></i>
          Posted on <%= @goods_receipt.posted_at.strftime('%b %d, %Y') %>
        </span>
      <% end %>
      
      <!-- Actions -->
      <div class="btn-group ms-2">
        <% if @goods_receipt.can_edit? %>
          <%= link_to edit_inventory_goods_receipt_path(@goods_receipt), 
              class: 'btn btn-outline-primary' do %>
            <i class="bi bi-pencil me-1"></i> Edit
          <% end %>
        <% end %>

        <% if @goods_receipt.can_post? %>
          <%= link_to post_receipt_inventory_goods_receipt_path(@goods_receipt), 
              method: :post,
              data: { confirm: 'Post this GRN? Stock levels will be updated.' },
              class: 'btn btn-sm btn-outline-success' do %>
            <i class="bi bi-check-circle me-2"></i>Post Receipt
          <% end %>
        <% end %>
            
        <%= link_to print_inventory_goods_receipt_path(@goods_receipt, format: :pdf), 
            target: '_blank',
            class: 'btn btn-sm btn-outline' do %>
          <i class="bi bi-printer me-2"></i>Print GRN
        <% end %>
            
        <% if @goods_receipt.can_edit? %>
          <%= link_to inventory_goods_receipt_path(@goods_receipt), 
              method: :delete,
              data: { confirm: 'Delete this GRN?' },
              class: 'btn btn-sm btn-outline-danger' do %>
            <i class="bi bi-trash me-2"></i>Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Left Column -->
    <div class="col-md-8">
      <!-- GRN Information -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h5 class="mb-0">Receipt Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Warehouse:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-building me-1"></i>
                  <strong><%= @goods_receipt.warehouse.name %></strong>
                </dd>

                <dt class="col-sm-5">Receipt Date:</dt>
                <dd class="col-sm-7">
                  <%= @goods_receipt.receipt_date.strftime('%B %d, %Y') %>
                </dd>

                <% if @goods_receipt.supplier %>
                  <dt class="col-sm-5">Supplier:</dt>
                  <dd class="col-sm-7">
                    <%= @goods_receipt.supplier.name %>
                  </dd>
                <% end %>
              </dl>
            </div>

            <div class="col-md-6">
              <dl class="row mb-0">
                <% if @goods_receipt.purchase_order %>
                  <dt class="col-sm-5">Purchase Order:</dt>
                  <dd class="col-sm-7">
                    <%= link_to @goods_receipt.purchase_order.po_number, 
                        inventory_purchase_order_path(@goods_receipt.purchase_order),
                        class: 'text-decoration-none fw-bold' %>
                  </dd>
                <% end %>

                <% if @goods_receipt.posted_at %>
                  <dt class="col-sm-5">Posted:</dt>
                  <dd class="col-sm-7">
                    <%= @goods_receipt.posted_at.strftime('%B %d, %Y at %I:%M %p') %>
                    <% if @goods_receipt.posted_by %>
                      <br><small class="text-muted">by <%= @goods_receipt.posted_by.full_name %></small>
                    <% end %>
                  </dd>
                <% end %>
              </dl>
            </div>

            <% if @goods_receipt.notes.present? %>
              <div class="col-12 mt-3">
                <dt>Notes:</dt>
                <dd class="border-start border-3 border-primary ps-3 mb-0">
                  <%= simple_format(@goods_receipt.notes) %>
                </dd>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Received Items -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h5 class="mb-0">Received Items</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Product</th>
                  <th>Location</th>
                  <th>Batch</th>
                  <th class="text-end">Quantity</th>
                  <th class="text-end">Unit Cost</th>
                  <% if @goods_receipt.status == 'POSTED' %>
                    <th class="text-center">Stock Updated</th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <% @lines.each_with_index do |line, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>
                      <strong><%= line.product.sku %></strong><br>
                      <small class="text-muted"><%= line.product.name %></small>
                      <% if line.line_note.present? %>
                        <br><small class="text-info">
                          <i class="bi bi-info-circle"></i> <%= line.line_note %>
                        </small>
                      <% end %>
                    </td>
                    <td>
                      <span class="text-white badge bg-secondary">
                        <%= line.location.code %>
                      </span>
                      <br><small class="text-muted"><%= line.location.name %></small>
                    </td>
                    <td>
                      <% if line.batch %>
                        <span class="text-white badge bg-primary">
                          <%= line.batch.batch_number %>
                        </span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td class="text-end">
                      <strong class="text-success"><%= line.qty.to_i %></strong> <%= line.uom.symbol %>
                    </td>
                    <td class="text-end">
                      <% if line.unit_cost.present? %>
                        <%= number_to_currency(line.unit_cost) %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <% if @goods_receipt.status == 'POSTED' %>
                      <td class="text-center">
                        <i class="bi bi-check-circle-fill text-success"></i>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer bg-primary">
          <div class="row">
            <div class="col-md-8">
              <strong>Total Items Received:</strong> <%= @lines.count %> line items
            </div>
            <div class="col-md-4 text-end">
              <strong>Total Quantity:</strong> <%= @goods_receipt.total_quantity.to_i %> units
            </div>
          </div>
        </div>
      </div>

      <!-- Stock Transactions (if posted) -->
      <% if @goods_receipt.status == 'POSTED' %>
        <div class="card">
          <div class="card-header bg-primary d-flex align-items-center">
            <h5 class="mb-0">
              <i class="bi bi-arrow-repeat me-2"></i>
              Stock Transactions Created
            </h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-sm align-middle mb-0">
                <thead>
                  <tr>
                    <th>Transaction Type</th>
                    <th>Product</th>
                    <th>Location</th>
                    <th>Quantity</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% StockTransaction.where(
                        reference_type: 'GRN', 
                        reference_id: @goods_receipt.id.to_s,
                        deleted: false
                      ).includes(:product, :to_location).each do |txn| %>
                    <tr>
                      <td>
                        <span class="text-white badge bg-success">
                          <%= txn.txn_type %>
                        </span>
                      </td>
                      <td><%= txn.product.sku %></td>
                      <td><%= txn.to_location&.code %></td>
                      <td><strong>+<%= txn.quantity.to_i %></strong></td>
                      <td><%= txn.created_at.strftime('%b %d, %Y %I:%M %p') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Summary -->
    <div class="col-md-4">
      <!-- Status Info -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h6 class="mb-0">Status Information</h6>
        </div>
        <div class="card-body">
          <% if @goods_receipt.status == 'DRAFT' %>
            <div class="alert alert-warning mb-3">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <strong>Draft Status</strong><br>
              <small>This receipt has not been posted yet. Stock levels are not updated.</small>
            </div>
            
            <% if @goods_receipt.can_post? %>
              <%= link_to post_receipt_inventory_goods_receipt_path(@goods_receipt), 
                  method: :post,
                  data: { confirm: 'Post this GRN? Stock levels will be updated immediately.' },
                  class: 'btn btn-success w-100' do %>
                <i class="bi bi-check-circle me-1"></i> Post Receipt Now
              <% end %>
            <% end %>
          <% else %>
            <div class="alert alert-success mb-0">
              <i class="bi bi-check-circle-fill me-2"></i>
              <strong>Posted Successfully</strong><br>
              <small>Stock levels have been updated.</small>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="card">
        <div class="card-header bg-primary d-flex align-items-center">
          <h6 class="mb-0">Receipt Summary</h6>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-7">Total Lines:</dt>
            <dd class="col-5 text-end"><strong><%= @lines.count %></strong></dd>

            <dt class="col-7">Total Quantity:</dt>
            <dd class="col-5 text-end">
              <strong class="text-success"><%= @goods_receipt.total_quantity.to_i %></strong>
            </dd>

            <% if @lines.any?(&:unit_cost) %>
              <dt class="col-7 border-top pt-2">Est. Total Value:</dt>
              <dd class="col-5 text-end border-top pt-2">
                <strong>
                  <%= number_to_currency(@lines.sum { |l| (l.qty.to_d * (l.unit_cost || 0).to_d) }) %>
                </strong>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>

      <% if @goods_receipt.warehouse %>
        <div class="card mt-4">
          <div class="card-header bg-primary d-flex align-items-center">
            <h6 class="mb-0">Warehouse Info</h6>
          </div>
          <div class="card-body">
            <h6 class="text-primary mb-2">
              <i class="bi bi-building"></i>
              <%= @goods_receipt.warehouse.name %>
            </h6>
            <% if @goods_receipt.warehouse.address.present? %>
              <p class="text-muted small mb-0">
                <%= simple_format(@goods_receipt.warehouse.address) %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>