<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Stock Adjustments</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="/inventory/dashboard">Inventory Management</a>
        <a class="breadcrumb-item" href="/inventory/stock_adjustments">Stock Adjustments</a>

        <span class="breadcrumb-item active">View Stock Adjustment</span>
      </nav>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-start mb-4">
    <div>
      <h2 class="mb-2">
        <i class="bi bi-box-seam me-2"></i>
        <%= @stock_adjustment.reference_no %>
      </h2>
      <p class="text-muted mb-0">
        Created on <%= @stock_adjustment.created_at.strftime('%B %d, %Y at %I:%M %p') %>
        <% if @stock_adjustment.created_by %>
          by <%= @stock_adjustment.created_by.full_name %>
        <% end %>
      </p>
    </div>

    <div class="text-end">
      <%= render 'shared/status_badge', status: @stock_adjustment.status %>
      
      <% if @stock_adjustment.status == 'POSTED' %>
        <span class="text-white badge bg-success ms-2">
          <i class="bi bi-check-circle me-1"></i>
          Posted on <%= @stock_adjustment.posted_at.strftime('%b %d, %Y') %>
        </span>
      <% end %>
      
      <!-- Actions -->
      <div class="btn-group ms-2">
        <% if @stock_adjustment.can_edit? %>
          <%= link_to edit_inventory_stock_adjustment_path(@stock_adjustment), 
              class: 'btn btn-sm btn-outline-primary' do %>
             Edit
          <% end %>
        <% end %>

        <% if @stock_adjustment.can_post? %>
          <%= link_to post_adjustment_inventory_stock_adjustment_path(@stock_adjustment), 
              method: :get,
              data: { confirm: 'Post this Stock Adjustment? Stock levels will be updated.' },
              class: 'btn btn-sm btn-outline-success' do %>
            <i class="bi bi-check-circle me-2"></i>Post Adjustment
          <% end %>
        <% end %>
            
        <%= link_to print_inventory_stock_adjustment_path(@stock_adjustment, format: :pdf), 
            target: '_blank',
            class: 'btn btn-sm btn-outline' do %>
          <i class="bi bi-printer me-2"></i>Print Stock Adjustment
        <% end %>
            
        <% if @stock_adjustment.can_edit? %>
          <%= link_to inventory_stock_adjustment_path(@stock_adjustment), 
              method: :delete,
              data: { confirm: 'Delete this Stock Adjustment?' },
              class: 'btn btn-sm btn-outline-danger' do %>
            <i class="bi bi-trash me-2"></i>Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Left Column -->
    <div class="col-md-8">
      <!-- Stock Adjustment Information -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h5 class="mb-0">Receipt Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row mb-0">
                <dt class="col-sm-5">Warehouse:</dt>
                <dd class="col-sm-7">
                  <i class="bi bi-building me-1"></i>
                  <strong><%= @stock_adjustment.warehouse.name %></strong>
                </dd>
              </dl>
            </div>
            
          </div>
        </div>
      </div>

      <!-- Received Items -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h5 class="mb-0">Received Items</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-light">
                <tr>
                  <th>Product</th>
                  <th>Location</th>
                  <th>UoM</th>
                  <th>Qty Delta</th>
                  <th>Reason</th>
                </tr>
              </thead>
              <tbody>
                <% @lines.each_with_index do |line, index| %>
                  <tr>
                    <td>
                      <strong><%= line.product.sku %></strong><br>
                      <small class="text-muted"><%= line.product.name %></small>
                    </td>
                    
                    
                    <td>
                      <span class="text-white badge bg-secondary">
                        <%= line.location.code %>
                      </span>
                      <br><small class="text-muted"><%= line.location.name %></small>
                    </td>
                    <td><%= line.uom.name %></td>
                    <td class="text-end">
                      <strong class="text-success"><%= line.qty_delta %></strong> <%= line.product.unit_of_measure.symbol %>
                    </td>
                    <td><%= line.line_note.presence || "-" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Stock Transactions (if posted) -->
      <% if @stock_adjustment.status == 'POSTED' %>
        <div class="card">
          <div class="card-header bg-primary d-flex align-items-center">
            <h5 class="mb-0">
              <i class="bi bi-arrow-repeat me-2"></i>
              Stock Transactions Created
            </h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-sm align-middle mb-0">
                <thead>
                  <tr>
                    <th>Transaction Type</th>
                    <th>Product</th>
                    <th>Location</th>
                    <th>Quantity</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% StockTransaction.where(
                        reference_type: 'ADJUSTMENT', 
                        reference_id: @stock_adjustment.id.to_s,
                        deleted: false
                      ).includes(:product, :from_location).each do |txn| %>
                    <tr>
                      <td>
                        <span class="text-white badge bg-success">
                          <%= txn.txn_type %>
                        </span>
                      </td>
                      <td><%= txn.product.sku %></td>
                      <td><%= txn.from_location&.code || txn.to_location&.code %></td>
                      <td><strong><%= txn.txn_type == 'ADJUST_POS' ? '+' : '-' %><%= txn.quantity.to_i %></strong></td>
                      <td><%= txn.created_at.strftime('%b %d, %Y %I:%M %p') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Summary -->
    <div class="col-md-4">
      <!-- Status Info -->
      <div class="card mb-4">
        <div class="card-header bg-primary d-flex align-items-center">
          <h6 class="mb-0">Status Information</h6>
        </div>
        <div class="card-body">
          <% if @stock_adjustment.status == 'DRAFT' %>
            <div class="alert alert-warning mb-3">
              <i class="bi bi-exclamation-triangle me-2"></i>
              <strong>Draft Status</strong><br>
              <small>This receipt has not been posted yet. Stock levels are not updated.</small>
            </div>
            
            <% if @stock_adjustment.can_post? %>
              <%= link_to post_adjustment_inventory_stock_adjustment_path(@stock_adjustment), 
                  method: :get,
                  data: { confirm: 'Post this Stock Adjustment? Stock levels will be updated immediately.' },
                  class: 'btn btn-success w-100' do %>
                <i class="bi bi-check-circle me-1"></i> Post Adjustment Now
              <% end %>
            <% end %>
          <% else %>
            <div class="alert alert-success mb-0">
              <i class="bi bi-check-circle-fill me-2"></i>
              <strong>Posted Successfully</strong><br>
              <small>Stock levels have been updated.</small>
            </div>
          <% end %>
        </div>
      </div>

      <% if @stock_adjustment.warehouse %>
        <div class="card mt-4">
          <div class="card-header bg-primary d-flex align-items-center">
            <h6 class="mb-0">Warehouse Info</h6>
          </div>
          <div class="card-body">
            <h6 class="text-primary mb-2">
              <i class="bi bi-building"></i>
              <%= @stock_adjustment.warehouse.name %>
            </h6>
            <% if @stock_adjustment.warehouse.address.present? %>
              <p class="text-muted small mb-0">
                <%= simple_format(@stock_adjustment.warehouse.address) %>
              </p>
            <% end %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>