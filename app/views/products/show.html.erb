<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">View Product</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= products_path %>">Products</a>
                <span class="breadcrumb-item active">View Product</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="m-t-10">
                        <div class="table-responsive">

                            <table class="table table-bordered">
                                <tbody>

                                    <tr>
                                        <th width="25%">Name</th>
                                        <td><%= @product.name %></td>
                                    </tr>

                                    <tr>
                                        <th>SKU</th>
                                        <td><%= @product.sku %></td>
                                    </tr>

                                    <tr>
                                        <th>Category</th>
                                        <td><%= @product.product_category.name %></td>
                                    </tr>

                                    <tr>
                                        <th>Unit of Measure</th>
                                        <td><%= @product.unit_of_measure.symbol %></td>
                                    </tr>

                                    <tr>
                                      <th>Product Type</th>
                                      <td><%= @product.product_type %></td>
                                    </tr>

                                    <% if @product.requires_standard_cost? %>
                                        <tr>
                                          <th>Standard Cost</th>
                                          <td><%= number_to_currency(@product.standard_cost) %></td>
                                        </tr>
                                    <% end %>
                                    <tr>
                                        <th>Reorder Point</th>
                                        <td><%= @product.reorder_point %></td>
                                    </tr>

                                    <tr>
                                        <th>Batch Tracked?</th>
                                        <td><%= @product.is_batch_tracked ? "Yes" : "No" %></td>
                                    </tr>

                                    <tr>
                                        <th>Serial Tracked?</th>
                                        <td><%= @product.is_serial_tracked ? "Yes" : "No" %></td>
                                    </tr>

                                    <tr>
                                        <th>Active?</th>
                                        <td><%= @product.is_active ? "Yes" : "No" %></td>
                                    </tr>

                                    <tr>
                                        <th>Actions</th>
                                        <td>
                                            <%= link_to "Edit", edit_product_path(@product) %> |
                                            <%= link_to "Delete", product_path(@product),
                                                 method: :delete,
                                                 data: { confirm: "Are you sure?" } %>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>