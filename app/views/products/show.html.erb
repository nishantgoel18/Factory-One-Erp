<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">View Product</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item">
                    <i class="anticon anticon-home m-r-5"></i>Home
                </a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= products_path %>">Products</a>
                <span class="breadcrumb-item active">View Product</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-box me-2"></i>
                    <%= @product.name %> (SKU: <%= @product.sku %>)
                    <small class="text-muted"><%= @product.product_category.name %></small>
                </h2>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- Left Column -->
        <div class="col-md-6">

            <!-- General Info -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">General Info</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%">UOM:</th>
                            <td><%= link_to @product.unit_of_measure.name, @product.unit_of_measure %></td>
                        </tr>
                        <tr>
                            <th>Product Type:</th>
                            <td><%= @product.product_type %></td>
                        </tr>
                        <tr>
                            <th>Active?</th>
                            <td><%= @product.is_active ? "Yes" : "No" %></td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Costing -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Costing</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%">Standard Cost:</th>
                            <td><%= @product.standard_cost ? "$#{@product.standard_cost}" : "Not Available" %></td>
                        </tr>
                        <tr>
                            <th>Labor Cost:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Material Cost:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Overhead Cost:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Selling Price:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Margin:</th>
                            <td>To be developed</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">

            <!-- Inventory -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title mb-0">Inventory</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%">On Hand:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Allocated:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Available:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Procured:</th>
                            <td>To be developed</td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Planning -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Planning</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%">Lead Time:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Safety Stock:</th>
                            <td><%= @product.reorder_point %></td>
                        </tr>
                        <tr>
                            <th>Min:</th>
                            <td>To be developed</td>
                        </tr>
                        <tr>
                            <th>Batch Tracked?</th>
                            <td><%= @product.is_batch_tracked ? "Yes" : "No" %></td>
                        </tr>
                        <tr>
                            <th>Serial Tracked?</th>
                            <td><%= @product.is_serial_tracked ? "Yes" : "No" %></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <% if @product.can_have_bom? %>
        <div class="row">
            <div class="col-lg-12">

                <!-- Bill of Materials -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Bill of Materials</h5>
                    </div>
                    <div class="card-body">
                        <%= link_to "New Bill of Materials", 
                                    new_product_bill_of_material_url(@product), 
                                    class: "btn btn-primary btn-sm" %>
                        <br><br>

                        <% if @product.bill_of_materials.non_deleted.any? %>
                            <div class="table-responsive">
                                <table class="table admins_table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product</th>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th>Revision</th>
                                            <th>Status</th>
                                            <th>Default</th>
                                            <th>Created At</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% @product.bill_of_materials.non_deleted.each do |bom| %>
                                            <tr>
                                                <td><%= bom.id %></td>
                                                <td><%= link_to bom.product.name, bom.product %></td>
                                                <td><%= bom.code %></td>
                                                <td><%= bom.name %></td>
                                                <td><%= bom.revision %></td>
                                                <td><%= bom.status %></td>
                                                <td><%= bom.is_default ? "Yes" : "No" %></td>
                                                <td><%= bom.created_at.strftime("%b %d, %Y") %></td>

                                                <td>
                                                    <% if bom.can_be_activated? %>
                                                        <%= link_to "Activate", 
                                                                    activate_product_bill_of_material_url(@product, bom) %> |
                                                    <% end %>

                                                    <%= link_to "View", product_bill_of_material_url(@product, bom) %> |
                                                    <%= link_to "Edit", edit_product_bill_of_material_url(@product, bom) %> |
                                                    <%= link_to "Delete",
                                                                delete_product_bill_of_material_url(@product, bom),
                                                                method: :delete,
                                                                data: { confirm: "Are you sure?" },
                                                                class: "confirm-delete" %>
                                                </td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        <% else %>
                            <p class="text-muted text-center py-3">No BOM in use for this product.</p>
                        <% end %>
                    </div>
                </div>

                <!-- Routing Panel -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-route me-2"></i> Production Routing
                        </h5>
                        <%= link_to new_routing_path(product_id: @product.id), 
                                    class: "btn btn-light btn-sm" do %>
                            <i class="fas fa-plus me-2"></i>Create Routing
                        <% end %>
                    </div>

                    <div class="card-body">
                        <% if @product.default_routing.present? %>
                            <% routing = @product.default_routing %>

                            <!-- Summary -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <h6 class="mb-1">
                                        <%= link_to routing.display_name, 
                                                    routing_path(routing), 
                                                    class: "text-decoration-none" %>
                                        <span class="badge bg-success ms-2">Default</span>
                                    </h6>
                                    <p class="text-muted small mb-0">
                                        <strong>Revision:</strong> <%= routing.revision %> |
                                        <strong>Operations:</strong> <%= routing.routing_operations.count %>
                                    </p>
                                </div>

                                <div class="col-md-4 text-end">
                                    <%= link_to "View Full Routing", 
                                                routing_path(routing), 
                                                class: "btn btn-sm btn-outline-primary" %>
                                </div>
                            </div>

                            <!-- Stats -->
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="border rounded p-2 text-center">
                                        <small class="text-muted d-block">Setup Time</small>
                                        <strong><%= number_with_precision(routing.total_setup_time_minutes, precision: 1) %>m</strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-2 text-center">
                                        <small class="text-muted d-block">Run Time/Unit</small>
                                        <strong><%= number_with_precision(routing.total_run_time_per_unit_minutes, precision: 1) %>m</strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-2 text-center">
                                        <small class="text-muted d-block">Labor Cost/Unit</small>
                                        <strong>$<%= number_with_precision(routing.total_labor_cost_per_unit, precision: 2) %></strong>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-2 text-center bg-success text-white">
                                        <small class="d-block">Total Cost/Unit</small>
                                        <strong>$<%= number_with_precision(routing.total_cost_per_unit, precision: 2) %></strong>
                                    </div>
                                </div>
                            </div>

                            <% if @product.routings.where(deleted: false).count > 1 %>
                                <div class="mt-3">
                                    <%= link_to "View All Routings (#{@product.routings.where(deleted: false).count})",
                                                routings_path(product_id: @product.id),
                                                class: "btn btn-sm btn-outline-secondary" %>
                                </div>
                            <% end %>

                        <% else %>
                            <div class="text-center py-4">
                                <i class="fas fa-route fa-3x text-muted mb-3"></i>
                                <p class="text-muted mb-3">No routing defined for this product yet.</p>
                                <%= link_to "Create First Routing",
                                            new_routing_path(product_id: @product.id),
                                            class: "btn btn-primary" %>
                            </div>
                        <% end %>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-industry me-2"></i> Production Summary
                        </h5>
                    </div>

                    <div class="card-body">
                        <% readiness = @product.production_readiness %>

                        <!-- Readiness Status -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center mb-2">
                                    <% if readiness[:has_bom] %>
                                        <i class="fas fa-check-circle text-success me-2"></i> 
                                    <% else %>
                                        <i class="fas fa-times-circle text-danger me-2"></i> 
                                    <% end %>
                                    <span> Bill of Materials (BOM)</span>
                                </div>

                                <div class="d-flex align-items-center">
                                    <% if readiness[:has_routing] %>
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                    <% else %>
                                        <i class="fas fa-times-circle text-danger me-2"></i>
                                    <% end %>
                                     <span>Production Routing</span>
                                </div>
                            </div>

                            <div class="col-md-6 text-end">
                                <% if readiness[:ready] %>
                                    <span class="badge bg-success fs-5">
                                        <i class="fas fa-check me-1"></i> Ready for Production
                                    </span>
                                <% else %>
                                    <span class="badge bg-warning fs-5">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Not Ready
                                    </span>
                                <% end %>
                            </div>
                        </div>

                        <% if readiness[:ready] %>
                            <hr>

                            <!-- Production Cost Breakdown -->
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="text-muted small">Material Cost (from BOM)</label>
                                    <div class="fs-4 fw-bold text-primary">
                                        $<%= number_with_precision(@product.standard_cost, precision: 2) %>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="text-muted small">Processing Cost (from Routing)</label>
                                    <div class="fs-4 fw-bold text-info">
                                        $<%= number_with_precision(@product.default_routing&.total_cost_per_unit || 0, precision: 2) %>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="text-muted small">Total Production Cost</label>
                                    <div class="fs-3 fw-bold text-success">
                                        $<%= number_with_precision(@product.total_production_cost, precision: 2) %>
                                    </div>
                                </div>
                            </div>

                            <!-- Production Time Estimate -->
                            <hr>

                            <div class="row">
                                <div class="col-12">
                                    <label class="text-muted small mb-2">Production Time Estimate</label>
                                </div>

                                <div class="col-md-4">
                                    <div class="border rounded p-2">
                                        <small class="text-muted d-block">For 1 unit</small>
                                        <strong><%= @product.calculate_production_time(1) %> minutes</strong>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="border rounded p-2">
                                        <small class="text-muted d-block">For 10 units</small>
                                        <strong><%= (@product.calculate_production_time(10) / 60.0).round(1) %> hours</strong>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="border rounded p-2">
                                        <small class="text-muted d-block">For 100 units</small>
                                        <strong><%= @product.production_lead_time_days(100) %> days</strong>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>