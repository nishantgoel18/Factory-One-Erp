<!-- app/views/warehouses/index.html.erb -->

<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Warehouses</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="#">Masters</a>
        <span class="breadcrumb-item active">Warehouse</span>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="m-t-10">
            
            <%= link_to "New Warehouse", new_warehouse_path, class: "btn btn-primary btn-sm" %>
            <br><br>

            <div class="table-responsive">
              <table class="table admins_table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Is Active</th>
                    <th>Created At</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% @warehouses.each do |w| %>
                    <tr>
                      <td><%= w.id %></td>
                      <td><%= w.code %></td>

                      <td>
                        <%= link_to w.name, warehouse_path(w), style: "text-decoration:none; color:#007bff;" %>
                      </td>

                      <td><%= w.is_active ? "Yes" : "No" %></td>
                      <td><%= w.created_at.strftime("%b %d, %Y") %></td>

                      <td>
                        <%= link_to "View", warehouse_path(w) %> |
                        <%= link_to "Edit", edit_warehouse_path(w) %> |
                        <%= link_to "Delete", warehouse_path(w),
                                  method: :delete,
                                  data: { confirm: "Are you sure?" } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>

              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>