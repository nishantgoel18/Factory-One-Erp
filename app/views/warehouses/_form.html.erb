<!-- app/views/warehouses/_form.html.erb -->
<%= render 'layouts/error_messages', object: f.object %>

<div class="form-group">
  <div class="row">
    <div class="col-lg-12">
      <label class="font-weight-semibold">Name:</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Warehouse Name" %>
      <br />
    </div>

    <div class="col-lg-12">
      <label class="font-weight-semibold">Address:</label>
      <%= f.text_area :address, class: "form-control", rows: 3, placeholder: "Warehouse Address" %>
      <br />
    </div>

    <div class="col-lg-6">
      <label class="font-weight-semibold">Code:</label>
      <%= f.text_field :code, class: "form-control", placeholder: "Warehouse Code" %>
    </div>

    <div class="col-lg-6">
      <label class="font-weight-semibold">Active?</label>
      <%= f.select :is_active, [["Yes", true], ["No", false]], {}, class: "form-control" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
</div>