<%= render 'layouts/error_messages', object: f.object %>

<div class="form-group">
  <div class="row">
    <div class="col-lg-12">
      <label>Name:</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Location Name" %>
      <br />
    </div>

    <div class="col-lg-3">
      <label>Warehouse:</label>
      <%= f.collection_select :warehouse_id, Warehouse.non_deleted, :id, :name,
            { prompt: "Select Warehouse" },
            class: "form-control" %>
      <br />
    </div>

    <div class="col-lg-3">
      <label>Code:</label>
      <%= f.text_field :code, class: "form-control", placeholder: "Location Code" %>
      <br />
    </div>

    

    <div class="col-lg-3">
      <label>Pickable?</label><br>
      <%= f.check_box :is_pickable %> Yes
      <br />
    </div>

    <div class="col-lg-3">
      <label>Receivable?</label><br>
      <%= f.check_box :is_receivable %> Yes
      <br />
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
</div>