<div class="main-content">
  <%= render 'shared/alerts' %>

  <div class="page-header">
        <h2 class="header-title">Edit Location</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= locations_path %>">Locations</a>
                <span class="breadcrumb-item active">Edit Location</span>
            </nav>
        </div>
    </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">

          <%= form_with model: @location, url: location_path(@location), method: :patch, local: true do |f| %>
            <%= render 'form', f: f %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>