<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Locations</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="#">Masters</a>
        <span class="breadcrumb-item active">Location</span>
      </nav>
    </div>
  </div>

  <%= link_to "New Location", new_location_path, class: "btn btn-primary btn-sm" %>
  <br><br>

  <div class="card">
    <div class="card-body">

      <div class="table-responsive">
        <table class="table admins_table">
          <thead>
            <tr>
              <th>#</th>
              <th>Warehouse</th>
              <th>Code</th>
              <th>Name</th>
              <th>Pickable</th>
              <th>Receivable</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @locations.each do |l| %>
              <tr>
                <td><%= l.id %></td>

                <td>
                  <%= link_to l.warehouse.name, warehouse_path(l.warehouse),
                      style: "text-decoration:none; color:#007bff;" %>
                </td>

                <td><%= l.code %></td>
                <td><%= l.name %></td>
                <td><%= l.is_pickable ? "Yes" : "No" %></td>
                <td><%= l.is_receivable ? "Yes" : "No" %></td>

                <td>
                  <%= link_to "View", location_path(l) %> |
                  <%= link_to "Edit", edit_location_path(l) %> |
                  <%= link_to "Delete", delete_location_path(l),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class: "confirm-delete"  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>