<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
        <h2 class="header-title">View Location</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= locations_path %>">Locations</a>
                <span class="breadcrumb-item active">View</span>
            </nav>
        </div>
    </div>

  <div class="card">
    <div class="card-body">

      <table class="table table-bordered">
        <tbody>

          <tr>
            <th width="25%">Warehouse</th>
            <td>
              <%= link_to @location.warehouse.name,
                    warehouse_path(@location.warehouse),
                    style: "text-decoration:none; color:#007bff;" %>
            </td>
          </tr>

          <tr>
            <th width="25%">Code</th>
            <td><%= @location.code %></td>
          </tr>

          <tr>
            <th width="25%">Name</th>
            <td><%= @location.name %></td>
          </tr>

          <tr>
            <th width="25%">Pickable</th>
            <td><%= @location.is_pickable ? "Yes" : "No" %></td>
          </tr>

          <tr>
            <th width="25%">Receivable</th>
            <td><%= @location.is_receivable ? "Yes" : "No" %></td>
          </tr>

          <tr>
            <th width="25%">Actions</th>
            <td>
              <%= link_to "Edit", edit_location_path(@location) %> |
              <%= link_to "Delete", delete_location_path(@location),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "confirm-delete"  %>
            </td>
          </tr>

        </tbody>
      </table>

    </div>
  </div>

</div>