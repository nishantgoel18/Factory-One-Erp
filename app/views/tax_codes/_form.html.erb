<%= simple_form_for @tax_code do |f| %>
  <%= render 'layouts/error_messages', object: @tax_code %>
  <div class="row">

    <div class="col-lg-12">
      <%= f.input :name, label: "Name", input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-4">
      <%= f.input :code, label: "Code (auto if blank)", input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-4">
      <%= f.input :jurisdiction,
          collection: TaxCode::JURISDICTIONS.invert,
          label: "Jurisdiction",
          include_blank: "Select Jurisdiction", input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-4">
      <%= f.input :tax_type,
          collection: TaxCode::TAX_TYPES.invert,
          label: "Tax Type",
          include_blank: "Select Type", input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-4">
      <%= f.input :country, label: "Country (ISO)", input_html: { value: "US" }, input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-4">
      <%= f.input :state_province, label: "State / Province" %>
    </div>

    <div class="col-lg-4">
      <%= f.input :county %>
    </div>

    <div class="col-lg-6">
      <%= f.input :city %>
    </div>

    <div class="col-lg-6">
      <%= f.input :rate, label: "Tax Rate (0.0825 = 8.25%)" %>
    </div>

    <div class="col-lg-6">
      <%= f.input :is_compound, as: :boolean, label: "Is Compound?" %>
    </div>

    <div class="col-lg-6">
      <%= f.input :compounds_on, label: "Compounds On (tax code)" %>
    </div>

    <div class="col-lg-6">
      <%= f.input :effective_from, input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-6">
      <%= f.input :effective_to, input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-6">
      <%= f.input :tax_authority_id, label: "Tax Authority ID" %>
    </div>

    <div class="col-lg-6">
      <%= f.input :filing_frequency,
          collection: TaxCode::FILING_FREQUENCIES.invert,
          include_blank: "Select Filing Frequency", input_html: {class: 'form-control'} %>
    </div>

    <div class="col-lg-6">
      <%= f.input :is_active, as: :boolean, label: "Active?" %>
    </div>

  </div>

  <%= f.submit "Save", class: "btn btn-success btn-sm" %>
<% end %>