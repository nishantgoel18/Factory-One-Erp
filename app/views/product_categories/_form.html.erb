<div class="form-group">
    <div class="row">

        <!-- Name -->
        <div class="col-lg-6">
            <label class="font-weight-semibold">Name:</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Category Name" %>
        </div>

        <!-- Parent -->
        <div class="col-lg-6">
            <label class="font-weight-semibold">Parent Category:</label>
            <%= f.collection_select :parent_id,
                ProductCategory.where.not(id: f.object.id),
                :id,
                :name,
                { include_blank: "No Parent" },
                class: "form-control" 
            %>
        </div>

    </div>
</div>

<div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
</div>