<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">New Product Category</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= product_categories_path %>">Product Categories</a>
                <span class="breadcrumb-item active">New</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="m-t-10">

                        <%= form_with model: @product_category, url: product_categories_path, local: true do |f| %>
                            <%= render 'layouts/error_messages', object: @product_category %>
                            <%= render 'product_categories/form', f: f %>
                        <% end %>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>