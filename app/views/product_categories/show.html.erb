<div class="main-content">
    <%= render 'layouts/alerts' %>

    <div class="page-header">
        <h2 class="header-title">View Product Category</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Masters</a>
                <a class="breadcrumb-item" href="<%= product_categories_path %>">Product Categories</a>
                <span class="breadcrumb-item active">View</span>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="m-t-10">
                        <div class="table-responsive">

                            <table class="table table-bordered">
                                <tbody>

                                    <tr>
                                        <th width="25%">Name</th>
                                        <td><%= @product_category.name %></td>
                                    </tr>

                                    <tr>
                                        <th>Parent</th>
                                        <td><%= @product_category.parent&.name || "No Parent" %></td>
                                    </tr>

                                    <tr>
                                        <th>Created At</th>
                                        <td><%= @product_category.created_at.strftime("%b %d, %Y") %></td>
                                    </tr>

                                    <tr>
                                        <th>Action</th>
                                        <td>
                                            <%= link_to "Edit", edit_product_category_path(@product_category) %> |
                                            <%= link_to "Delete", delete_product_category_path(@product_category),
                                                method: :delete, data: { confirm: "Are you sure?" }, class: "confirm-delete"  %>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>