<% if object.errors.any? %>
  <div class="alert alert-danger alert-dismissible col-12" role="alert" style="padding: 15px;">
    <h3>Following errors prevented your submission from getting saved:</h3>

    <p>
      <ul>
        <% object.errors.full_messages.each do |message| %>
            <li style="margin-left: 20px;">
              <%= message %>
            </li>
        <% end %>
      </ul>
    </p>
  </div>
<% end %>