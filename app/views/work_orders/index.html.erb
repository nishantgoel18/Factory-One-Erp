<div class="main-content">
  <%= render 'layouts/alerts' %>

  <div class="page-header">
    <h2 class="header-title">Work Orders</h2>
    <div class="header-sub-title">
      <nav class="breadcrumb breadcrumb-dash">
        <a href="/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
        <a class="breadcrumb-item" href="#">Masters</a>
        <span class="breadcrumb-item active">Work Orders</span>
      </nav>
    </div>
  </div>

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1">
        <i class="bi bi-gear-wide-connected"></i> Work Orders
      </h2>
      <p class="text-muted mb-0">Manage production work orders and track progress</p>
    </div>
    <%= link_to new_work_order_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> Create Work Order
    <% end %>
  </div>

  <!-- Stats Cards Row -->
  <div class="row g-3 mb-4">
    <% index_stats.each do |stat| %>
      <div class="col-md-2">
        <div class="card">
          <div class="card-body">
            <div class="media align-items-center">
              <div class="avatar avatar-icon avatar-lg <%= stat[:color_class] %>">
                <i class="<%= stat[:icon_class] %>"></i>
              </div>
              <div class="m-l-15">
                <h2 class="m-b-0"><%= stat[:value] %></h2>
                <p class="m-b-0 text-muted"><%= stat[:key] %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>

  <!-- Filters Card -->
  <div class="card  mb-4">
    <div class="card-body">
      <%= form_with url: work_orders_path, method: :get, local: true, class: "row g-3" do |f| %>
        <div class="col-md-2">
          <%= f.text_field :search, 
              value: params[:search],
              class: "form-control", 
              placeholder: "Search WO Number..." %>
        </div>

        <div class="col-md-2">
          <%= f.select :status, 
              options_for_select(WorkOrder::STATUSES.map { |s| [s.titleize, s] }, params[:status]),
              { include_blank: "All Statuses" },
              { class: "form-control" } %>
        </div>

        <div class="col-md-2">
          <%= f.select :priority,
              options_for_select(WorkOrder::PRIORITIES.map { |p| [p.titleize, p] }, params[:priority]),
              { include_blank: "All Priorities" },
              { class: "form-control" } %>
        </div>

        <div class="col-md-2">
          <%= f.select :warehouse_id,
              options_from_collection_for_select(@warehouses, :id, :name, params[:warehouse_id]),
              { include_blank: "All Warehouses" },
              { class: "form-control" } %>
        </div>

        <div class="col-md-2">
          <%= f.date_field :start_date,
              value: params[:start_date],
              class: "form-control",
              placeholder: "Start Date" %>
        </div>

        <div class="col-md-2">
          <%= f.date_field :end_date,
              value: params[:end_date],
              class: "form-control",
              placeholder: "End Date" %>
        </div>

        <div class="col-md-12">
          <br />
          <%= f.submit "Apply Filters", class: "btn btn-primary me-2" %>
          <%= link_to "Clear Filters", work_orders_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Work Orders Table -->
  <div class="card ">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>WO Number</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Status</th>
              <th>Priority</th>
              <th>Progress</th>
              <th>Scheduled Start</th>
              <th>Scheduled End</th>
              <th>Warehouse</th>
              <th>Created By</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @work_orders.any? %>
              <% @work_orders.each do |wo| %>
                <tr>
                  <td>
                    <%= link_to wo.wo_number, work_order_path(wo), class: "text-decoration-none fw-semibold" %>
                  </td>
                  <td>
                    <div class="fw-semibold"><%= wo.product.sku %></div>
                    <small class="text-muted"><%= wo.product.name %></small>
                  </td>
                  <td>
                    <span class="text-white badge bg-primary text-dark">
                      <%= number_with_precision(wo.quantity_to_produce, precision: 2) %> 
                      <%= wo.uom.symbol %>
                    </span>
                  </td>
                  <td>
                    <span class="text-white badge bg-<%= wo.status_badge_class %>">
                      <%= wo.status.titleize %>
                    </span>
                  </td>
                  <td>
                    <span class="text-white badge bg-<%= wo.priority_badge_class %>">
                      <%= wo.priority.titleize %>
                    </span>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="progress flex-grow-1" style="height: 20px; width: 100px; margin-bottom: 0px;">
                        <div class="progress-bar bg-success" 
                             role="progressbar" 
                             style="width: <%= wo.progress_percentage %>%"
                             aria-valuenow="<%= wo.progress_percentage %>" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                          <%= number_with_precision(wo.progress_percentage, precision: 0) %>%
                        </div>
                      </div>
                    </div>
                  </td>
                  <td><%= wo.scheduled_start_date.strftime("%b %d, %Y") %></td>
                  <td><%= wo.scheduled_end_date.strftime("%b %d, %Y") %></td>
                  <td><%= wo.warehouse.name %></td>
                  <td>
                    <small class="text-muted"><%= wo.created_by&.full_name || "System" %></small>
                  </td>
                  <td class="text-center">
                    <div class="btn-group" role="group">
                      <%= link_to work_order_path(wo), class: "btn btn-sm btn-outline-primary", title: "View Details" do %>
                        View
                      <% end %>
                      
                      <% if wo.status == 'NOT_STARTED' %>
                        <%= link_to edit_work_order_path(wo), class: "btn btn-sm btn-outline-warning", title: "Edit" do %>
                          Edit
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="11" class="text-center py-5">
                  <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                  <p class="text-muted">No work orders found. Create your first work order to get started!</p>
                  <%= link_to "Create Work Order", new_work_order_path, class: "btn btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @work_orders.any? %>
      <div class="card-footer bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <div class="text-muted small">
            Showing <%= @work_orders.offset_value + 1 %> to 
            <%= [@work_orders.offset_value + @work_orders.length, @work_orders.total_count].min %> 
            of <%= @work_orders.total_count %> entries
          </div>
          <%= paginate @work_orders %>
        </div>
      </div>
    <% end %>
  </div>
</div>

